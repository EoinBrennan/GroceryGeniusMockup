<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.udacity.firebase.shoppinglistplusplus.ui.MainActivity">

    <EditText
        android:id="@+id/edit_text_shop_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_add_shop"
        android:imeOptions="actionDone|flagNoExtractUi"
        android:inputType="textCapWords" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frequency_spinner"
        android:prompt="@string/frequency_shop_visit_prompt"
        android:entries="@array/frequency_shop_visit"
        android:layout_below="@+id/edit_text_shop_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>