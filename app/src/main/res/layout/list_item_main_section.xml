<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@android:color/white"
    android:clickable="false"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:foreground="?selectableItemBackground"
    android:paddingLeft="16dp"
    android:paddingStart="80dp">

    <RelativeLayout
        android:id="@+id/section_header"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/text_view_section_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Section"
            android:textColor="@android:color/white"
            android:layout_margin="@dimen/fab_margin" />

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:id="@+id/button_add_item_to_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_icon_transparent"
            android:background="@android:color/transparent"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true" />

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_options_transparent"
            android:id="@+id/section_options_button"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/button_add_item_to_section"
            android:layout_toStartOf="@+id/button_add_item_to_section"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>

</RelativeLayout>