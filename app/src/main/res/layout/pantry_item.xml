<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@android:color/white"
    android:clickable="false"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:foreground="?selectableItemBackground"
    android:gravity="center_vertical">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/move_to_shop_button"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/text_view_p_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Item"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/move_to_shop_button"/>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_remove_icon"
        android:background="@android:color/transparent"
        android:id="@+id/remove_p_item_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pantry_quantity_up_button"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/remove_p_item_button"
        android:layout_toStartOf="@id/remove_p_item_button" />

    <TextView
        android:id="@+id/text_view_p_item_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:text="Item"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/pantry_quantity_up_button"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pantry_quantity_down_button"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/text_view_p_item_quantity"
        android:layout_toStartOf="@+id/text_view_p_item_quantity" />

</RelativeLayout>